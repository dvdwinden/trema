{{!< default}}

{{! The tag above means: insert everything in this file
into the {{{body}}} of the default.hbs template }}

<main id="site-main" class="site-main">
<section class="tag-header">
    <div class="container">
        {{#if feature_image}}
            <img class="tag-feature-image" src="{{img_url feature_image size="l"}}" alt="{{name}}" />
        {{/if}}
        <div class="tag-header-content">
            <h1 class="tag-title">{{name}}</h1>
            {{#if description}}
                <p class="tag-description">{{description}}</p>
            {{/if}}
            <div class="tag-stats">
                <span class="tag-stats-count">{{plural pagination.total empty='0 Posts' singular='% Post' plural='% Posts'}}</span>
            </div>
        </div>
    </div>
</section>

<section class="tag-feed">
    <div class="container">
        
        {{#foreach posts}}
            <article class="post-card {{post_class}}">
                
                {{#if feature_image}}
                    <a class="post-card-image-link" href="{{url}}">
                        <img class="post-card-image" src="{{img_url feature_image size="m"}}" alt="{{title}}" />
                    </a>
                {{/if}}
                
                <div class="post-card-content">
                    
                    <header class="post-card-header">
                        <h2 class="post-card-title">
                            <a href="{{url}}">{{title}}</a>
                        </h2>
                    </header>
                    
                    {{#if excerpt}}
                        <div class="post-card-excerpt">
                            <p>{{excerpt}}</p>
                        </div>
                    {{/if}}
                    
                    <footer class="post-card-meta">
                        <div class="post-card-byline">
                            <span class="post-card-author">
                                {{#foreach authors}}
                                    <a href="{{url}}">{{name}}</a>
                                    {{#unless @last}}, {{/unless}}
                                {{/foreach}}
                            </span>
                            <span class="post-card-date">
                                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                            </span>
                            <span class="post-card-reading-time">{{reading_time}}</span>
                        </div>
                    </footer>
                    
                </div>
                
            </article>
        {{/foreach}}
        
        {{pagination}}
        
    </div>
</section>
</main>
