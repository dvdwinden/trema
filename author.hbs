{{!< default}}

<main id="site-main" class="site-main">
<section class="author-header">
    <div class="container">
        {{#if author.profile_image}}
            <img class="author-profile-image" src="{{img_url author.profile_image size="l"}}" alt="{{author.name}}" />
        {{/if}}
        <div class="author-header-content">
            <h1 class="author-title">{{author.name}}</h1>
            {{#if author.bio}}
                <p class="author-bio">{{author.bio}}</p>
            {{/if}}
            <div class="author-meta">
                {{#if author.location}}
                    <div class="author-location">üìç {{author.location}}</div>
                {{/if}}
                {{#if author.website}}
                    <div class="author-website">
                        <a href="{{author.website}}" target="_blank" rel="noopener">üåê Website</a>
                    </div>
                {{/if}}
                {{#if author.twitter}}
                    <div class="author-twitter">
                        <a href="{{author.twitter_url}}" target="_blank" rel="noopener">üê¶ Twitter</a>
                    </div>
                {{/if}}
                {{#if author.facebook}}
                    <div class="author-facebook">
                        <a href="{{author.facebook_url}}" target="_blank" rel="noopener">üìò Facebook</a>
                    </div>
                {{/if}}
            </div>
            <div class="author-stats">
                <div class="author-stats-item">
                    <span class="author-stats-count">{{plural ../pagination.total empty='0 Posts' singular='% Post' plural='% Posts'}}</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="author-feed">
    <div class="container">
        {{#foreach posts}}
            <article class="author-post-item">
                <a href="{{url}}" class="author-post-link">
                    
                    <div class="author-post-date">
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                    </div>
                    
                    <div class="author-post-content">
                        <h2 class="author-post-title">{{title}}</h2>
                        
                        {{#if excerpt}}
                            <p class="author-post-excerpt">{{excerpt}}</p>
                        {{/if}}
                        
                        {{#if tags.length}}
                            <div class="author-post-tags">
                                {{#foreach tags}}
                                    {{#unless @first}}
                                        <span class="tag-link">{{name}}</span>
                                        {{#unless @last}}
                                            <span class="tag-separator"> / </span>
                                        {{/unless}}
                                    {{/unless}}
                                {{/foreach}}
                            </div>
                        {{/if}}
                    </div>
                    
                    {{#if twitter_image}}
                        <div class="author-post-image">
                            <img src="{{img_url twitter_image size="m"}}" alt="{{title}}" />
                        </div>
                    {{else if og_image}}
                        <div class="author-post-image">
                            <img src="{{img_url og_image size="m"}}" alt="{{title}}" />
                        </div>
                    {{else if feature_image}}
                        <div class="author-post-image">
                            <img src="{{img_url feature_image size="m"}}" alt="{{title}}" />
                        </div>
                    {{/if}}
                    
                </a>
            </article>
        {{/foreach}}
        
        {{pagination}}
        
    </div>
</section>
</main>
