{{!< default}}

<main id="site-main" class="site-main">
{{#author}}
<section class="author-header">
    <div class="container">
        {{#if profile_image}}
            <img class="author-profile-image" src="{{img_url profile_image size="l"}}" alt="{{name}}" />
        {{/if}}
        <div class="author-header-content">
            <h1 class="author-title">{{name}}</h1>
            {{#if bio}}
                <p class="author-bio">{{bio}}</p>
            {{/if}}
            <div class="author-meta">
                {{#if location}}
                    <div class="author-location">{{location}}</div>
                {{/if}}
                {{#if website}}
                    <div class="author-website">
                        <a href="{{website}}" target="_blank" rel="noopener">Website</a>
                    </div>
                {{/if}}
                {{#if twitter}}
                    <div class="author-twitter">
                        <a href="{{social_url type="twitter"}}" target="_blank" rel="noopener">Twitter</a>
                    </div>
                {{/if}}
                {{#if facebook}}
                    <div class="author-facebook">
                        <a href="{{social_url type="facebook"}}" target="_blank" rel="noopener">Facebook</a>
                    </div>
                {{/if}}
                {{#if (social_url type="bluesky")}}
                    <div class="author-bluesky">
                        <a href="{{social_url type="bluesky"}}" target="_blank" rel="noopener">Bluesky</a>
                    </div>
                {{/if}}
                {{#if (social_url type="threads")}}
                    <div class="author-threads">
                        <a href="{{social_url type="threads"}}" target="_blank" rel="noopener">Threads</a>
                    </div>
                {{/if}}
                {{#if (social_url type="mastodon")}}
                    <div class="author-mastodon">
                        <a href="{{social_url type="mastodon"}}" target="_blank" rel="noopener">Mastodon</a>
                    </div>
                {{/if}}
                {{#if (social_url type="linkedin")}}
                    <div class="author-linkedin">
                        <a href="{{social_url type="linkedin"}}" target="_blank" rel="noopener">LinkedIn</a>
                    </div>
                {{/if}}
                {{#if (social_url type="instagram")}}
                    <div class="author-instagram">
                        <a href="{{social_url type="instagram"}}" target="_blank" rel="noopener">Instagram</a>
                    </div>
                {{/if}}
                {{#if (social_url type="youtube")}}
                    <div class="author-youtube">
                        <a href="{{social_url type="youtube"}}" target="_blank" rel="noopener">YouTube</a>
                    </div>
                {{/if}}
                {{#if (social_url type="tiktok")}}
                    <div class="author-tiktok">
                        <a href="{{social_url type="tiktok"}}" target="_blank" rel="noopener">TikTok</a>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>
{{/author}}

<section class="author-feed">
    <div class="container">
        {{#foreach posts}}
            <article class="author-post-item">
                <a href="{{url}}" class="author-post-link">
                    
                    <div class="author-post-date">
                        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time>
                    </div>
                    
                    <div class="author-post-content">
                        <h2 class="author-post-title">{{title}}</h2>
                        
                        {{#if excerpt}}
                            <p class="author-post-excerpt">{{excerpt}}</p>
                        {{/if}}
                        
                        {{#if tags.length}}
                            <div class="author-post-tags">
                                {{#foreach tags}}
                                    {{#unless @first}}
                                        <span class="tag-link">{{name}}</span>
                                        {{#unless @last}}
                                            <span class="tag-separator"> / </span>
                                        {{/unless}}
                                    {{/unless}}
                                {{/foreach}}
                            </div>
                        {{/if}}
                    </div>
                    
                    {{#if twitter_image}}
                        <div class="author-post-image">
                            <img src="{{img_url twitter_image size="m"}}" alt="{{title}}" class="post-image-default" />
                            {{#if og_image}}
                                <img src="{{img_url og_image size="m"}}" alt="{{title}}" class="post-image-hover" />
                            {{/if}}
                        </div>
                    {{else if og_image}}
                        <div class="author-post-image">
                            <img src="{{img_url og_image size="m"}}" alt="{{title}}" class="post-image-default" />
                        </div>
                    {{else if feature_image}}
                        <div class="author-post-image">
                            <img src="{{img_url feature_image size="m"}}" alt="{{title}}" class="post-image-default" />
                        </div>
                    {{/if}}
                    
                </a>
            </article>
        {{/foreach}}
        
        {{pagination}}
        
    </div>
</section>

</main>
