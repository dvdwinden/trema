{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template }}

<main id="site-main" class="site-main">
<article class="article {{page_class}}">

    {{#if @page.show_title_and_feature_image}}
        <header class="article-header">
            <h1 class="article-title">{{title}}</h1>
            {{#if excerpt}}
                <p class="article-excerpt">{{excerpt}}</p>
            {{/if}}
            <div class="article-byline">
                <section class="article-byline-content">
                    <div class="article-byline-meta">
                        <h4 class="author-name">
                            {{#foreach authors}}
                                <a href="{{url}}">{{name}}</a>
                                {{#unless @last}}, {{/unless}}
                            {{/foreach}}
                        </h4>
                        <div class="byline-meta-content">
                            <time class="byline-meta-date" datetime="{{date format="YYYY-MM-DD"}}">
                                {{date format="MMM DD, YYYY"}}
                            </time>
                            {{#if reading_time}}
                                <span class="byline-reading-time">
                                    <span class="bull">&bull;</span>
                                    {{reading_time}}
                                </span>
                            {{/if}}
                        </div>
                    </div>
                </section>
            </div>
        </header>
    {{/if}}

    {{#if @page.show_title_and_feature_image}}
        {{#if feature_image}}
            <figure class="article-image">
                <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            </figure>
        {{/if}}
    {{/if}}

    <section class="gh-content gh-canvas">
        {{content}}
    </section>

    {{#if tags.length}}
        <footer class="article-footer">
            <div class="article-tags">
                {{#foreach tags}}
                    <a href="{{url}}" class="tag-link">{{name}}</a>
                {{/foreach}}
            </div>
        </footer>
    {{/if}}

</article>

{{! If you want to embed comments, this is a good place to do it! }}

</main>
