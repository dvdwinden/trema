{
  "name": "trema",
  "description": "A custom Ghost theme",
  "demo": "https://your-demo-site.com",
  "version": "1.0.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg",
    "mobile": "assets/screenshot-mobile.jpg"
  },
  "author": "Your Name <your.email@example.com> (https://your-website.com)",
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "responsive",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/trema.git"
  },
  "config": {
    "posts_per_page": 5,
    "card_assets": true,
    "image_sizes": {
      "xs": {
        "width": 150
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/yourusername/trema/issues"
  },
  "homepage": "https://github.com/yourusername/trema#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11"
  }
}
