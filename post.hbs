{{!< default}}

{{#post}}
<main id="site-main" class="site-main">
<article class="article {{post_class}}">

    <header class="article-header">
        <div class="article-tag">
            {{#primary_tag}}
                <a href="{{url}}">{{name}}</a>
            {{/primary_tag}}
        </div>
        <h1 class="article-title">{{title}}</h1>
        {{#if excerpt}}
            <p class="article-excerpt">{{excerpt}}</p>
        {{/if}}
        <div class="article-byline">
            <section class="article-byline-content">
                <div class="article-byline-meta">
                    <h4 class="author-name">
                        {{#foreach authors}}
                            <a href="{{url}}">{{name}}</a>
                            {{#unless @last}}, {{/unless}}
                        {{/foreach}}
                    </h4>
                    <div class="byline-meta-content">
                        <time class="byline-meta-date" datetime="{{date format="YYYY-MM-DD"}}">
                            {{date format="MMM DD, YYYY"}}
                        </time>
                        <span class="byline-reading-time">
                            <span class="bull">&bull;</span>
                            {{reading_time}}
                        </span>
                    </div>
                </div>
            </section>
        </div>
    </header>

    {{#if feature_image}}
        <figure class="article-image">
            <img src="{{img_url feature_image size="xl"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
    {{/if}}

    <section class="gh-content gh-canvas">
        {{content}}
    </section>

    {{#if tags.length}}
        <footer class="article-footer">
            <div class="article-tags">
                {{#foreach tags}}
                    <a href="{{url}}" class="tag-link">{{name}}</a>
                {{/foreach}}
            </div>
        </footer>
    {{/if}}

</article>

{{! If you want to embed comments, this is a good place to do it! }}

</main>

{{! Links to Previous/Next posts }}
<aside class="read-more-wrap">
    <div class="read-more inner">
        {{#next_post}}
            <article class="read-more-item">
                <span class="read-more-item-dir">Next</span>
                <h2 class="post-card-title"><a href="{{url}}">{{title}}</a></h2>
                {{#if excerpt}}<p class="post-card-excerpt">{{excerpt}}</p>{{/if}}
                <p class="post-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time> &bull; {{reading_time}}</p>
            </article>
        {{/next_post}}

        {{#prev_post}}
            <article class="read-more-item">
                <span class="read-more-item-dir">Previous</span>
                <h2 class="post-card-title"><a href="{{url}}">{{title}}</a></h2>
                {{#if excerpt}}<p class="post-card-excerpt">{{excerpt}}</p>{{/if}}
                <p class="post-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time> &bull; {{reading_time}}</p>
            </article>
        {{/prev_post}}
    </div>
</aside>
{{/post}}
