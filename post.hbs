{{!< default}}

{{#post}}
<main id="site-main" class="site-main">
<article class="article {{post_class}}">

    <header class="article-header">
        <h1 class="article-title">{{title}}</h1>
        {{#if tags.[0]}}
            <h2 class="article-author">by {{tags.[0].name}}</h2>
        {{/if}}

        <div class="article-header-flex">
            {{#if feature_image}}
                <figure class="article-image">
                    <img src="{{img_url feature_image size="l"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                    {{#if feature_image_caption}}
                        <figcaption>{{feature_image_caption}}</figcaption>
                    {{/if}}
                </figure>
            {{/if}}
            <div class="article-header-content">
                {{#if excerpt}}
                    <p class="article-excerpt">{{excerpt}}</p>
                {{/if}}
                {{#if tags.length}}
                    <div class="article-tags">
                        {{#foreach tags}}
                            {{#unless @first}}
                                <a href="{{url}}" class="tag-link">{{name}}</a>
                                {{#unless @last}}
                                    <span class="tag-separator"> / </span>
                                {{/unless}}
                            {{/unless}}
                        {{/foreach}}
                    </div>
                {{/if}}
            </div>
        </div>

    </header>

    <section class="gh-content gh-canvas">
        {{content}}
        <div class="byline-meta-content">
            <img src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" class="author-image">
            <p class="author-name">
                {{#foreach authors}}
                    <a href="{{url}}">{{name}}</a>
                    {{#unless @last}}, {{/unless}}
                {{/foreach}}
            </p>
            <time class="byline-meta-date" datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="MMM DD, YYYY"}}
            </time>
        </div>
    </section>
</article>

</main>

{{! Links to Previous/Next posts }}
<aside class="read-more-wrap">
    <div class="read-more inner">
        {{#next_post}}
            <article class="read-more-item">
                <span class="read-more-item-dir">Next</span>
                <h2 class="post-card-title"><a href="{{url}}">{{title}}</a></h2>
                {{#if excerpt}}<p class="post-card-excerpt">{{excerpt}}</p>{{/if}}
                <p class="post-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time> &bull; {{reading_time}}</p>
            </article>
        {{/next_post}}

        {{#prev_post}}
            <article class="read-more-item">
                <span class="read-more-item-dir">Previous</span>
                <h2 class="post-card-title"><a href="{{url}}">{{title}}</a></h2>
                {{#if excerpt}}<p class="post-card-excerpt">{{excerpt}}</p>{{/if}}
                <p class="post-card-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM DD, YYYY"}}</time> &bull; {{reading_time}}</p>
            </article>
        {{/prev_post}}
    </div>
</aside>
{{/post}}
